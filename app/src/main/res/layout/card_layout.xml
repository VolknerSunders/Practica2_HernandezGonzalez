<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_margin="12dp"
    app:cardBackgroundColor="#BDECB6"
    app:cardCornerRadius="20dp"
    android:elevation="6dp"
    app:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >
        <ImageView
            android:layout_height="100dp"
            android:layout_width="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:id="@+id/imagenProd"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="nombre"
            android:id="@+id/nombreProd"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/imagenProd"
            android:layout_toRightOf="@+id/imagenProd"
            android:layout_alignParentTop="true"
            android:textSize="30dp"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="cantidad"
            android:id="@+id/cantidadProd"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/imagenProd"
            android:layout_toRightOf="@+id/imagenProd"
            android:layout_below="@+id/nombreProd"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>